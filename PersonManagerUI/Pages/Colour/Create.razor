@page "/data/colour/create"

@inherits ColourBasePageClass

<PageTitle>Create Colour</PageTitle>

<h3>Create Colour</h3>

<EditForm Model="@DisplayColour" OnValidSubmit="@InsertColour">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <table class="table table-striped">
        <tbody>
            <tr>
                <td><strong>Colour Name</strong></td>
                <td><InputText id="countryName" @bind-Value="DisplayColour.ColourName" /></td>
            </tr>
        </tbody>
    </table>

    <button type="submit" class="btn btn-primary">Submit</button> <a href="/data/colours/index">Cancel</a>

</EditForm>