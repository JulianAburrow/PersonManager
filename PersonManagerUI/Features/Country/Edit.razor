@page "/data/country/edit/{CountryId:int}"
@inherits PersonManagerUI.Shared.BasePageClasses.CountryBasePageClass

<PageTitle>Edit @DisplayCountry.CountryName</PageTitle>

<h1>Edit @CountryDisplayName</h1>

<EditForm Model="@DisplayCountry" OnValidSubmit="@UpdateCountry">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <table class="table table-striped">
        <tbody>
            <tr>
                <td><strong>Country Name</strong></td>
                <td><InputText id="firstName" @bind-Value="DisplayCountry.CountryName" /></td>
            </tr>
        </tbody>
    </table>

    <button type="submit" class="btn btn-primary">Update</button> | <a href="/data/countries/index">Cancel</a>

</EditForm>