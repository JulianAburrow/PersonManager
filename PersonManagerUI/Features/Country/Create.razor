@page "/data/country/create"

@inherits CountryBasePageClass

<PageTitle>Create Country</PageTitle>

<h1>Create Country</h1>

<EditForm Model="@DisplayCountry" OnValidSubmit="@InsertCountry">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <table class="table table-striped">
        <tbody>
            <tr>
                <td><strong>Country Name</strong></td>
                <td><InputText id="countryName" @bind-Value="DisplayCountry.CountryName" /></td>
            </tr>
        </tbody>
    </table>

    <button type="submit" class="btn btn-primary">Submit</button> <a href="/data/countries/index">Cancel</a>

</EditForm>
